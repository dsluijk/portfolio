{
	"compilerOptions": {
		"noImplicitAny": true,
		"sourceMap": true,
		"module": "esnext",
		"target": "es5",
		"moduleResolution": "node",
		"jsx": "react",
		"jsxFactory": "h",
		"allowJs": false,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"paths": {
			"~*": ["./*"]
		}
	},
	"include": ["./src/**/*"]
}
