{
  "private": true,
  "name": "portfolio",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build",
    "serve": "preact build && preact serve",
    "dev": "preact watch",
    "lint": "tslint --project src",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,css,md,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "eslint-config-aerian"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/webpack-env": "^1.13.9",
    "css-loader": "^1.0.1",
    "husky": "^1.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "node-sass": "^4.12.0",
    "per-env": "^1.0.2",
    "preact-cli": "^3.0.0-next.19",
    "preact-render-spy": "^1.3.0",
    "prettier": "^1.15.3",
    "sass-loader": "^7.3.1",
    "ts-jest": "^23.10.5",
    "ts-loader": "^3.5.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-consistent-codestyle": "^1.14.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.1",
    "typings-for-css-modules-loader": "^1.7.0"
  },
  "dependencies": {
    "preact": "^10.0.0",
    "preact-compat": "^3.18.4",
    "preact-render-to-string": "^5.0.7",
    "preact-router": "^3.0.1"
  },
  "peerDependencies": {
    "prettier": ">1.0.0",
    "tslint": ">5.0.0"
  }
}
